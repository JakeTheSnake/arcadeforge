/* ====================================================================================================================================================
   Custom resets
   ==================================================================================================================================================== */

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

menu, ol, ul, button, input, label {
  border: 0;
  margin: 0;
  padding: 0;
}

ol, ul, li {
  list-style: none;
}

h1, h2, h3, p {
  padding: 0;
  margin: 0;
}

button:focus {
    outline: 0;
}

.btn {
    border-radius: 0;
}

a {
  color: #fff;
  text-decoration: none;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 400;
}

a:hover {
  text-decoration: underline;
}


a:last-child, button:last-child, img:last-child, p:last-child {
  margin-bottom: 0;
}

/* ====================================================================================================================================================
   Custom base layout, classes and conditions
   ==================================================================================================================================================== */

h1, h2, h3 {
  color: #FFE373;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 400;
  background-repeat: repeat-x;
  background-position: left bottom;
  margin-bottom: 5px;
}

h1 {
  font-size: 1.6em;
  padding-bottom: 1px;
  
}

h2 {
  font-size: 1.4em;
  padding-bottom: 2px;
}

h3 {
  font-size: 1.2em;
  padding-bottom: 3px;
}

h1 + p,
h2 + p,
h3 + p {
  margin-top: -4px;
}

p, span {
  padding: 0;
  margin-bottom: 20px;
  color: #F5F5F5;
  font-size: 12px;
  font-family: 'Droid Serif', sans-serif;
  line-height: 150%;
}

p + p {
  margin-top: -9px;
}

p + img {
  margin-top: -5px;
}

img {
  border: 0;
  outline: 0;
}

label {
  display: inline-block;
  color: #F5F5F5;
  font-size: 12px;
  font-family: 'Droid Sans', sans-serif;
  margin-bottom: 3px;
}

input {
  display: block;
  color: #1E1E1E;
  font-size: 12px;
  font-family: 'Droid Sans', sans-serif;
  border: 1px solid #A1A6AE;
  margin-left: 1px;
  height: 22px;
  padding: 2px 0 0 6px;
  width: 163px;
}

/* ==========================================================================
   Container, rows and columns
   ========================================================================== */

#container-fluid {
  margin: 0 auto 0 auto;
  padding: 0;
  overflow: hidden;
  height: 100%;
  width: 100%;
}

#container {
  width: 1366px;
  margin: 0 auto 0 auto;
}

.gray {
  background-color: #282828;
}

/* ==========================================================================
   Header
   ========================================================================== */

header {
  background-color: #323232;
  vertical-align: middle;
  padding: 0;
  margin: 0;
  height: 60px;
}
/* ==========================================================================
   Nav
   ========================================================================== */

nav {
  margin: 0 auto 0 auto;
  width: 1366px;
}

#nav-main {
  margin-top: 20px;
  float: left;
}

#nav-main li {
  display: inline-block;
  margin-right: 30px;
}

#nav-user {
  display: block;
  float: right;
}

#nav-user a {
  display: inline-block;
  margin-top: 20px;
  margin-right: 30px;
}

#nav-user button {
  margin-top: 14px;
  vertical-align: top;
}

#nav-user button a {
  margin: 0;
  padding: 0;
}

/* ==========================================================================
   Content
   ========================================================================== */

#content {
  min-height: 1px;
  height: 100%;
  width: 100%;
  background-color: #ff0000;
}

#logo {
  display: block;
  background: url(<%= asset_path 'logo_arcadeforge.png' %>);
  margin: 50px auto 30px auto;
  width: 375px;
  height: 165px;
}

#btn-create {
  display: block;
  margin: 0 auto 0 auto;
  text-align: center;
}

#login, #signup {
  display: block;
  background-color: #323232;
  margin: 40px auto 0 auto;
  padding: 20px;
  width: 400px;
}

#login button:last-child, #signup button:last-child {
  margin-top: 20px;
}

/* ==========================================================================
   Environment
   ========================================================================== */

#environment {
  position: absolute;
  top: 60px;
  left: 0;
  background: url(<%= asset_path 'environment_ground.gif' %>) 5px 2px;
  width: 100%;
  height: 100%;
  z-index: -1;
}

#environment-base {
  background: url(<%= asset_path 'environment_base.gif' %>) top center;
  height: 527px;
}

/* ==========================================================================
   Lists
   ========================================================================== */

#lists {
  position: absolute;
  top: 520px;
}

#lists h1 {
  color: #000;
  font-weight: bold;
  font-family: 'Droid Sans', sans-serif;
}

#lists div {
  display: block;
  width: 260px;
  margin-right: 30px;
  float: left;
}

#lists ul {
  background-color: #000;
  margin: 0;
  padding: 15px 20px 30px 20px;
}

#lists li {
  display: block;
}

/* ====================================================================================================================================================
   Custom button classes
   ==================================================================================================================================================== */

.btn {
  background-color: #505050;
  border: 0;
  border-radius: 0;
  color: #fff;
  cursor: pointer;
  margin-right: 2px;
  margin-bottom: 0;
  width: 86px;
  height: 34px;
  font-size: 0.9em;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 400;
  text-align: center;
  text-shadow: 1px 1px rgba(0,0,0,0.2);
  white-space: nowrap;
  vertical-align: middle;
  padding: 8px 0;

    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.btn-lg {
  font-size: 1.1em;
  width: 160px;
  height: 50px;
}

.btn.disabled,
.btn[disabled] {
  pointer-events: none;
  cursor: not-allowed;
  color: #808080;
  background-color: #505050;
}

/*
 * Button: Success
 */

.btn-success {
  background-color: #239D58;
}

.btn-success:hover {
  background-color: #27AE60;
}

.btn-success:active {
  background-color: #1C8047;
}

/*
 * Button: Edit
 */

.btn-edit {
  background-color: #E5A52E;
} 

.btn-edit:hover {
  background-color: #F5B031;
}

.btn-edit:active {
  background-color: #C78F28;
}

/*
 * Button: Warning
 */

.btn-warning {
  background-color: #CE5144;
}

.btn-warning:hover {
  background-color: #DE5849;
}

.btn-warning:active {
  background-color: #B0463A;
}

