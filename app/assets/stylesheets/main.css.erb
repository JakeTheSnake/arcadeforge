/* ====================================================================================================================================================
   Custom resets
   ==================================================================================================================================================== */

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

section {
  background-color: #2B2B2B;
  height: 100%;
  width: 100%;
  padding-top: 50px;
}

menu, ol, ul, button, input, label {
  border: 0;
  margin: 0;
  padding: 0;
}

ol, ul, li {
  list-style: none;
}

h1, h2, h3, p {
  padding: 0;
  margin: 0;
}

a {
  color: #fff;
  text-decoration: none;
  font-family: 'Droid Sans', sans-serif;
}

a:hover {
  text-decoration: underline;
}

/* ====================================================================================================================================================
   Custom base layout, classes and conditions
   ==================================================================================================================================================== */

h1, h2, h3 {
  color: #FFE373;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 400;
  margin-bottom: 15px;
  width: 100%;
}

h1 {
  font-size: 1.6em;
  padding-bottom: 1px;
  
}

h2 {
  background-image: url("<%= asset_path 'title_underline.gif' %>");
  background-repeat: repeat-x;
  background-position: left bottom;
  font-size: 1.4em;
  padding-bottom: 2px;
}

h3 {
  font-size: 1.2em;
  padding-bottom: 3px;
}

h1 + p,
h2 + p,
h3 + p {
  margin-top: -4px;
}

p, span {
  padding: 0;
  margin-bottom: 20px;
  color: #F5F5F5;
  font-size: 12px;
  font-family: 'Droid Serif', sans-serif;
  line-height: 150%;
}

p + p {
  margin-top: -9px;
}

p + img {
  margin-top: -5px;
}

img {
  border: 0;
  outline: 0;
}

label {
  display: inline-block;
  color: #F5F5F5;
  font-size: 12px;
  font-family: 'Droid Sans', sans-serif;
  margin-bottom: 3px;
}

input {
  display: block;
  color: #1E1E1E;
  font-size: 0.8em;
  font-family: 'Droid Sans', sans-serif;
  border: 1px solid #A1A6AE;
  margin-left: 1px;
  height: 22px;
  padding: 2px 0 0 6px;
  width: 163px;
}

/* ==========================================================================
   Container, rows and columns
   ========================================================================== */

.container {
  width: 100%;
  margin: 0 auto 0 auto;
}

.navbar-logo {
  margin-top: 7px;
  float: left;
}

.btn {
  display: block;
  text-align: center;
  text-shadow: 1px 1px rgba(0,0,0,0.2);
}

.panel {
  width: 300px;
  background-color: #323232;
  margin: 0 auto 0 auto;
  padding: 30px 30px 0 30px;
}

/* ==========================================================================
   Borders
   ========================================================================== */

.border-top {
  background-image: url("<%= asset_path 'border_top.png' %>");
  background-repeat: repeat-x;
  background-position: left top;
}

.border-bottom {
  background-image: url("<%= asset_path 'border_bottom.png' %>");
  background-repeat: repeat-x;
  background-position: left bottom;
}

.border-right {
  background-image: url("<%= asset_path 'border_right.png' %>");
  background-repeat: repeat-y;
  background-position: top right;
}

.border-left {
  background-image: url("<%= asset_path 'border_left.png' %>");
  background-repeat: repeat-y;
  background-position: top left;
}

/* ==========================================================================
   Nav
   ========================================================================== */

nav {
  background-color: #323232;
  height: 86px;
  padding: 0 40px;
}

#nav-main {
  display: inline-block;
  margin: 36px 0 0 29px;
}

#nav-main li {
  display: inline-block;
  margin-right: 30px;
}

#nav-user {
  margin-top: 30px;
  float: right;
}

#nav-user li {
  display: inline-block;
  margin-right: 30px;
}

#nav-user li:last-child {
  margin-right: 0;
}

#btn-signup {
  background-color: #239D58;
  padding: 6px 0;
  width: 88px;
}

/* ==========================================================================
   Content: Home
   ========================================================================== */

#home {
  background-image: url("<%= asset_path 'environment_base.gif' %>");
  background-repeat: no-repeat;
  background-color: transparent;
}

#logo {
  display: block;
  background: url("<%= asset_path 'logo_arcadeforge.png' %>");
  margin: 50px auto 30px auto;
  width: 375px;
  height: 165px;
}

#btn-creategame {
  background-color: #239D58;
  margin-bottom: 10px;
  padding: 12px 0;
}

#btn-watchvideo {
  background-color: #F5B031;
  padding: 12px 0;
}

#environment-base {
  position: absolute;
  top: 0;
  background: url("<%= asset_path 'environment_ground.gif' %>") 5px 6px;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.environment-logo {
  display: block;
  margin: 0 auto 10px auto;
  width: 404px;
  height: 181px;
}

#environment-cta {
  margin: 0 auto 0 auto;
  width: 160px;
}


/* ==========================================================================
   Content: Play
   ========================================================================== */

#toolbar-bottom {
  position: absolute;
  top: 86px;
  right: 0;
  bottom: 0;
  left: 0;
}

#toolbar-bottom > .left {
  position: absolute;
  background-color: #323232;
  width: 227px;
  height: 100%;
  padding: 30px;
}

#toolbar-bottom > .middle {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 227px;
  background-color: #2B2B2B;
  padding: 33px 0 0 30px;
}

/* ==========================================================================
   Content: Game category and item
   ========================================================================== */

.game-category {
  margin-bottom: 27px;
  width: 900px;
}

.game-item {
  display: inline-block;
  margin-right: 20px;
}

.game-item:last-child {
  margin-right: 0;
}

.game-item img {
  border: 1px solid #404040;
  margin-bottom: 7px;
}

.game-item-title {
  font-size: 0.9em;
  color: #FFE373;
  margin-bottom: 4px;
  display: block;
}

.game-item-rating {
  margin-bottom: 0;
}

.game-item-rating input {
  display: inline-block;
  padding: 0;
  width: 14px;
  height: 14px;
}

/* ==========================================================================
   Content: Signup
   ========================================================================== */

form.new_user,
form.edit_user {
  margin-bottom: 30px;
}


form .field {
  display: block;
  margin: 0 10px 10px 0;
  padding: 0;
  width: 292px;
}

.panel-center form input {
  width: 100%;
}

form .field em {
  color: #FFF;
  font-size: 0.6em;
  font-family: 'Droid Sans', sans-serif;
}

form .actions .btn {
  width: 100%;
  margin-top: 20px;
}

form #user_remember_me {   display: inline-block;   width: 30px; }

/* ==========================================================================
   Footer
   ========================================================================== */

footer {
  width: 100%;
  position: absolute;
  bottom: 0;
  background-color: #323232;
  height: 100px;
  padding-top: 20px;
}

footer a {
  font-size: 0.8em;
}

footer ul {
  display: inline-block;
  margin-right: 135px;
}

footer ul:first-child {
  padding-left: 40px;
}

footer li {
  height: 18px
}

#footer-social {
  margin-right: 0;
  padding-right: 40px;
  float: right;
}

#footer-social li {
  display: inline-block;
}

#footer-copyright {
  display: block;
  position: relative;
  padding-right: 40px;
  float: right;
  font-family: 'Droid Sans', sans-serif;
}

.btn {
  background-color: #505050;
  border: 0;
  border-radius: 0;
  color: #fff;
  cursor: pointer;
  margin-right: 2px;
  margin-bottom: 0;
  width: 86px;
  height: 34px;
  font-size: 0.9em;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 400;
  text-align: center;
  text-shadow: 1px 1px 1px rgba(0,0,0,0.8);
  white-space: nowrap;
  vertical-align: middle;
  padding: 8px 0;

    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
