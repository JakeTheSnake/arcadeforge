}

.btn-lg {
  width: 160px;
  height: 48px;
  padding: 10px 0;
  font-size: 1em;
}

.btn.disabled,
.btn[disabled] {
  pointer-events: none;
  cursor: not-allowed;
  color: #808080;
  background-color: #505050;
}

.btn-wide {
  width: 155px;
}

/*
 * Button: Success
 */

.btn-success {
  background-color: #239D58;
}

.btn-success:hover {
  background-color: #27AE60;
}

.btn-success:active {
  background-color: #1C8047;
}

/*
 * Button: Edit
 */

.btn-edit {
  background-color: #E5A52E;
} 

.btn-edit:hover {
  background-color: #F5B031;
}

.btn-edit:active {
  background-color: #C78F28;
}

/*
 * Button: Warning
 */

.btn-warning {
  background-color: #CE5144;
}

.btn-warning:hover {
  background-color: #DE5849;
}

.btn-warning:active {
  background-color: #B0463A;
}

