/*! object-manager.css | http://arcadeforge.io */

#object-manager > .panel {
  background-color: #222222;
  height: 100%;
}

#object-manager .panel.large {
  width: 650px;
}

#object-manager .btn-group {
  margin-bottom: 0;
}

/* ==========================================================================
   Editor: Parameters
   ========================================================================== */

#object-manager .parameter-groups li td:first-child {
  width: 60px;
}

#object-manager .parameter-groups li table input,
#object-manager .parameter-groups li table select {
  width: 72px;
}

/* ==========================================================================
   Editor: Properties
   ========================================================================== */

#object-manager-properties {
  width: 650px;
}

.create-new-tab {
  margin-bottom: 2px;
}

.create-new-tab input {
  width: 138px;
  margin-bottom: 2px;
}

.create-new-tab a {
  width: 55px;
  padding-top: 5px;
  height: 10px;
}

#dialogue-panel-states.btn-group,
#dialogue-panel-counters.btn-group {
  margin-bottom: 2px;
}


#create-state-form input,
#create-counter-form input {
  margin-bottom: 2px;
}

#create-state-form a.btn,
#create-counter-form a.btn {
  width: 79px;
}

#image-upload-controls {
  float: left;
  margin-right: 15px;
}

#global-object-image {
  display: block;
  width: 530px;
  height: 200px;
  margin-bottom: 15px;
}

#global-object-image.player {
  background: url('<%= asset_path "editor/globalobject_type_player.jpg" %>');
}

#global-object-image.game {
  background: url('<%= asset_path "editor/globalobject_type_game.jpg" %>');
}

#global-object-image.counter {
  background: url('<%= asset_path "editor/globalobject_type_counter.jpg" %>');
}