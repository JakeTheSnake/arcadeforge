/*Needed to make canvas in editor appear under tools and scroll*/
#editor-middle-column {
  overflow: auto;
}

#tutorial-content {
  height: 82%;
  font: 1.25em 'Georgia';
  color: white;
  text-shadow: 1px 2px #222;
}

#tutorial-dialogue {
  height: 135px;
  width: 390px;
  border-radius: 10px;
  background-color: #2574A9;
  position: absolute;
  border: 5px solid #e5a52e;
  padding: 20px;
  z-index: 12;
}

#tutorial-dialogue .btn-group {
  position: relative;
  top: 60px;
}

#tutorial-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: none;
  z-index: 10;
}

.tutorial-highlighted {
  z-index: 11;
  position: relative;
  pointer-events: none;
}

#tutorial-dialogue .btn-group a {
  width: 102px;
  border-radius: 5px;
  margin-right: 4px;
  border: 2px solid #e5a52e;
}

#tutorial-dialogue .btn-group a:last {
  margin-right: 0px;
}

.arrow_box {
    position: relative;
    background: #d54b35;
    border: 2px solid #FFFFFF;
    padding: 5px 5px 5px 5px;
    font-size: 0.8em;
    color: #FFFFFF;
    font-family: 'Droid Sans', sans-serif;
}

.arrow_box:after, .arrow_box:before {
    top: 100%;
    left: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
}

.arrow_box:after {
    border-color: rgba(213, 75, 53, 0);
    border-top-color: #d54b35;
    border-width: 10px;
    margin-left: -10px;
}
.arrow_box:before {
    border-color: rgba(194, 225, 245, 0);
    border-top-color: #FFFFFF;
    border-width: 13px;
    margin-left: -13px;
}

/* Style fix for action-window in direct mode 2015-02-02 */
#select-action-window .btn-group {
  margin-bottom: 0;
}

/* Image uploading. 2015-02-07 */

.selected-image-preview, .popup-selected-image-preview {
  width: 100px;
  height: 100px;
}

#asset-select-popup {
  height: 400px;
  width: 550px;
  position: absolute;
  left: calc(50% - 275px);
  top: calc(50% - 200px);
  display: none;
  z-index: 3;
  background: #505050;
}


#asset-select-tab-row {
  position: absolute;
  top: -26px;
}

#asset-select-tab-row .image-select-tab{
  float: left;
  background-color: #505050;
  cursor: pointer;
  margin-right: 5px;
  padding: 5px;
}

#asset-select-tab-row .image-select-tab.active{
  cursor: default;
  background-color: #e5a52e;
}

#asset-select-overlay {
  z-index: 2;
}

#asset-select-library-categories {
  width: 100px;
  height: 400px;
  float: left;
}

.asset-select-library-category {
  padding: 2px 4px 2px 4px;
  cursor: pointer;
}

.asset-select-library-category.active {
  background-color: #e5a52e;
  cursor: default;
}

.image-select-library-image {
  float: left;
  cursor: pointer;
}

.image-select-library-image img {
  width: 100px;
  height: 100px;
}

#audio-select-library-items {
    float: left;
}

.audio-select-library-item {
    margin-left: 5px;
    height: 30px;
    font-size: 20px;
}

.audio-select-library-item div {
    float: left;
}

.audio-select-library-item-name {
    margin-top: 5px;
    cursor: pointer;
}

.audio-select-library-item-play {
    height: 14px;
    background-color: green;
    border-radius: 10px;
    margin-top: 5px;
    margin-left: 10px;
    font-size: 14px;
    padding: 3px;
    color: white;
    cursor: pointer;
}

.audio-select-library-item-stop {
    height: 14px;
    background-color: red;
    border-radius: 10px;
    margin-top: 5px;
    margin-left: 10px;
    font-size: 14px;
    padding: 3px;
    color: white;
    cursor: pointer;
}

/* Image uploading for states 2015-02-12 */

#global-object-image-upload-controls.fade-disable {
  opacity: 0.5;
  pointer-events: none;
  cursor: default;
}


/* ==========================================================================
   Add global object: Description
   ========================================================================== */

.global-object-description {
  margin-bottom: 20px;
}

.global-object-description span {
  display: inline-block;
  font-family: 'Droid Sans', sans-serif;
  text-shadow: 2px 2px rgba(0, 0, 0, 0.5);
}


/* ==========================================================================
   The div that contains information about an On Collide-item. The image,
   the title and the delete button
   ========================================================================== */

.collision-with-item {
  display: block;
  height: 26px;
  margin-bottom: 1px;
  padding: 0 0 0 21px;
  background-color: #424242;
}

.collision-with-item span {
  display: inline-block;
  padding-top: 6px;
}

.collision-with-item a.btn {
  width: 30px;
  padding: 5px 0 0 0;
  height: 21px;
  float: right;
}

/* Fix pointer for save button */

#save-game-button {
  cursor: pointer;
}

#save-game-button.disabled {
  cursor: default;
  pointer-events: none;
}


/* ============================================================================
    Left toolbar classes, copied from edit mode buttons style
   =========================================================================== */

#toolbar-left {
  display: block;
  width: 48px;
  height: 48px;
  border-bottom: 1px solid #474747;
}

#toolbar-left div:hover {
  background-color: #3C3C3C;
}

#toolbar-left div {
  margin: 0 0 4px 0;
  width: 48px;
  height: 48px;
  clear: right;
}

#toolbar-global-counters { background-image: url("<%= asset_path 'game/icon_global-counters.png' %>"); }
#toolbar-global-counters:hover { background-image: url("<%= asset_path 'game/icon_global-counters.png' %>"); }

#toolbar-game-properties { background-image: url("<%= asset_path 'game/icon_settings.png' %>"); }
#toolbar-game-properties:hover { background-image: url("<%= asset_path 'game/icon_settings.png' %>"); }

