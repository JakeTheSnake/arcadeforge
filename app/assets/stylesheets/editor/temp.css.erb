@font-face {
  font-family: 'icons';
  src: url("<%= asset_path 'icons.eot' %>");
  src: url("<%= asset_path 'icons.eot#iefix' %>") format('embedded-opentype'),
       url("<%= asset_path 'icons.woff' %>") format('woff'),
       url("<%= asset_path 'icons.ttf' %>") format('truetype'),
       url("<%= asset_path 'icons.svg#icons' %>") format('svg');
  font-weight: normal;
  font-style: normal;
}
 
[class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "icons";
  font-style: normal;
  font-weight: normal;
  speak: none;
  color: #FFFFFF;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
}
 
.icon-down-open:before { content: '\e800'; font-size: 60%; margin-right: 7px; }
.icon-cancel:before { content: '\e801'; } /* '' */
.icon-right-open:before { content: '\e802'; font-size: 60%; margin-right: 6px; }
