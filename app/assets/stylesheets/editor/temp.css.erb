#select-action-window {
  width: auto;
  height: 100%;
}

#select-action-window .col {
  min-width: 208px;
  padding-right: 2px;
}

#select-action-window .panel-body {
  overflow-y: hidden;
  height: 250px;
  background-color: #323232;
  margin-bottom: 2px;
  padding: 30px;
}

#select-action-window .image-preview {
  margin-top: 62px;
  display: block;
  float: left;
  margin-right: 10px;
  width: 165px;
  height: 125px;
  background: url("<%= asset_path 'editor/library_preview_grid.gif' %>");
}

#select-action-window .image-preview:last-child {
  margin-right: 0;
}

#select-action-window .image-preview-large {
  margin-top: 0;
  width: 100%;
  height: 100%;
}

#select-action-window .image-preview img {
  height: 100px;
  border: none;
  display: block;
  margin: 12px auto 0 auto;
  vertical-align: middle;
}

#select-action-window .image-preview-large img {
  height: 180px;
  margin-top: 35px;
}
