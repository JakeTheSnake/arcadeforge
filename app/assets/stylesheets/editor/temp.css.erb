header .btn-group {
  margin-right: 10px;
  margin-top: 14px;
  display: block;
  width: 148px;
  height: 72px;
  float: left;
}

header #edit-mode-buttons, #published-buttons {
  display: block;
  width: 148px;
  height: 48px;
  border-bottom: 1px solid #474747;
}

header #published-buttons,
header #published-label,
header #published-container {
  width: 148px;
}

header .btn-group span {
  width: 148px;
  height: 48px;
  margin: 0 auto 0 auto;
  color: #ADADAD;
  font-size: 0.7em;
  font-family: 'Droid Sans', sans-serif;
  text-align: center;
}

header .btn-group input[type="radio"] {
  display: none;
}

header .btn-group input[type="radio"] + label {
  display: block;
  margin: 0 2px 0 0;
  padding: 0;
  width: 48px;
  height: 48px;
  background-color: #2E2E2E;
  cursor: pointer;
  float: left;
}

header .btn-group input[type="radio"] + label:hover {
  background-color: #3C3C3C;
}

header .btn-group input[type="radio"] + label:last-of-type {
  margin: 0 0 4px 0;
  clear: right;
}

header .i-edit-game-button { background-image: url("<%= asset_path 'game/icon_edit-game_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-edit-game-button { background-image: url("<%= asset_path 'game/icon_edit-game.png' %>"); }

header .i-direct-game-button { background-image: url("<%= asset_path 'game/icon_direct-game_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-direct-game-button { background-image: url("<%= asset_path 'game/icon_direct-game.png' %>"); }

header .i-run-game-button { background-image: url("<%= asset_path 'game/icon_run-game_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-run-game-button { background-image: url("<%= asset_path 'game/icon_run-game.png' %>"); }

header .i-private-button { background-image: url("<%= asset_path 'game/icon_private_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-private-button { background-image: url("<%= asset_path 'game/icon_private.png' %>"); }

header .i-unlist-button { background-image: url("<%= asset_path 'game/icon_unlist_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-unlist-button { background-image: url("<%= asset_path 'game/icon_unlist.png' %>"); }

header .i-publish-button { background-image: url("<%= asset_path 'game/icon_published_disabled.png' %>"); }
header .btn-group input[type="radio"]:checked + label.i-publish-button { background-image: url("<%= asset_path 'game/icon_published.png' %>"); }


header .btn-group span {
  display: block;
}

header .toolbar-icon {
  margin-top: 14px;
  margin-right: 2px;
  display: block;
  width: 68px;
  height: 68px;
  background-color: #2E2E2E;
  float: left;
}

header .toolbar-icon:hover {
  background-color: #3C3C3C;
}

header .toolbar-icon-save { background-image: url("<%= asset_path 'game/icon_save.png' %>"); }

