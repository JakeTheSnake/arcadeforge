canvas {
  position: absolute;
  border-right: 2px solid;
  border-bottom: 2px solid;
}

#ui-canvas {
  pointer-events: none;
}

main > .col.left {
  position: absolute;
  width: 50px;
  height: 100%;
  background-color: #323232;
}

main > .col.middle {
  position: absolute;
  top: 0;
  right: 332px;
  bottom: 0;
  left: 52px;
  background-color: #262626;
}

main > .col.right {
  position: absolute;
  right: 0;
  width: 330px;
  height: 100%;
  background-color: #323232;
  overflow: hidden;
}

/* ==========================================================================
   Editor: Scenes
   ========================================================================== */

#scenes {
  background-color: #323232;
}

#scenes .btn-group {
  margin-bottom: 0;
}

.scene-swap-highlight {
  border-right: 2px solid #e5a52e;
}

/* ==========================================================================
   Editor: Panel properties
   ========================================================================== */

#properties {
  height: 362px;
}

/* ==========================================================================
   Editor: Panel Library
   ========================================================================== */
   
.library-tabs {
  width: 100%;
}

.library-tabs .btn-group {
  margin-bottom: 0;
}

.library-tabs .btn.tab {
  padding-right: 0;
  padding-left: 0;
  text-align: center;
  margin-bottom: 2px;
  width: 164px;
}

.library-preview {
  margin-bottom: 2px;
  height: 110px;
  background: url('<%= asset_path "editor/library_preview_grid.gif" %>');
}

.library-preview > img {
  width: 90px;
  height: 90px;
  padding-left: 80px;
  padding-top: 20px;
}

.library-explorer {
  overflow-x: hidden;
  overflow-y: scroll;
  margin-bottom: 2px;
  height: 220px;
  background-color: #F5F5F5;
}

.global-object-list > li {
  margin: 0 5px 0 5px;
  padding: 4px 0 0 27px;
  height: 18px;
  border: 0;
  font-size: 12px;
  font-color: #242424;
  font-family: 'Droid Sans', sans-serif;
  text-decoration: none;
  background: url('<%= asset_path "editor/library_explorer_icon_object.png" %>') no-repeat 5px center;
  cursor: pointer;

  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.global-object-list > li:hover {
  background-color: #E0EEE6;
}

.global-object-list > li:active {
  background-color: #CCE7D7;
}

.global-object-list > li.active {
  background-color: #CCE7D7;
}