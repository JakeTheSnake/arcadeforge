#environment {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: -1;
	height: 100%;
	overflow: hidden;
	background: url("<%= asset_path 'application/environment_ground.gif' %>");
}

#environment .background {
	width: 100%;
	height: 587px;
	margin: 0 auto 0 auto;
	background-color: transparent;
	background-image: url("<%= asset_path 'application/environment.jpg' %>");
	background-repeat: no-repeat;
	background-position: top center;
}