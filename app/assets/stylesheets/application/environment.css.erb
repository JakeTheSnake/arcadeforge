#super {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	overflow: hidden;
	height: 470px;
	padding-top: 30px;
}

#super .logo {
	display: block;
	width: 404px;
	height: 181px;
	margin: 0 auto 20px auto;
}

#super .cta {
	display: table;
	margin: 0 auto 0 auto;
}

#environment {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: -1;
}

#environment .background {
	height: 500px;
	background: url("<%= asset_path 'application/environment.jpg' %>") top center no-repeat;
	background-size: 100% 500px;
}

@media (max-width: 1920px) {
	#environment .background {
		height: 500px;
		background: url("<%= asset_path 'application/environment.jpg' %>") top center no-repeat;
	}
}