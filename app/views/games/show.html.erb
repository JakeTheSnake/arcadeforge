<%- model_class = Game -%>
<div class="page-header">
  <center><h1>"<%= @game.title %>"</h1></center>
</div>
<div id="showArea" class="welcome">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
    <dd><%= @game.author %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= raw @game.description.gsub("\r\n","<br/>") unless not @game.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:feedback) %>:</strong></dt>
    <dd><%= raw @game.feedback.gsub("\r\n","<br/>") unless not @game.feedback %></dd>
    <dt><strong><%= model_class.human_attribute_name(:limitations) %>:</strong></dt>
    <dd><%= raw @game.limitations.gsub("\r\n","<br/>") unless not @game.limitations %></dd>
    <dt>&nbsp;</dt>
    <dd><%= link_to_function "Play it!", 'gotoGame()', :class => 'regularButton' %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                games_path, :class => 'cancelButton'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_game_path(@game), :class => 'cancelButton' %>
  </div>
</div>
<div id="gameArea" style="display: none">
  <%= render :partial => 'gameArea' %>
</div
