<aside class="border-right">
    <div class="logo">
        <%= link_to image_tag("generic/header_logo.png"), root_path %>
    </div>

    <article>
    
    <%= link_to "Create your game", new_game_path, :class => "btn success wide" %>

    <p>Create your own web games and share them with your friends!</p>

    <div class="social">
      <a href="http://www.facebook.com/arcadeforge.io"><%= image_tag "application/icon_social_facebook.png" %></a>
      <a href="https://twitter.com/arcadeforge"><%= image_tag "application/icon_social_twitter.png" %></a>
      <a href="https://www.youtube.com/channel/UCMlg5Dx_e1P0amYGkJeYHbg"><%= image_tag "application/icon_social_youtube.png" %></a>
      <a href="http://www.reddit.com/r/arcadeforge"><%= image_tag "application/icon_social_reddit.png" %></a>
    </div>
    </article>
</aside>

<section id="play">
  <article>
    <div id="canvas-container" oncontextmenu="return false;">
    </div>
    <div id="splash">
      <h1 id="game-title"></h1>
      <a id="play-button"><b>Play</b></a>
      <p>made using</p>
      <%= link_to (image_tag 'generic/header_logo.png'), root_path %>
    </div>
    <div id="splash-overlay"></div>
  </article>
</section>

