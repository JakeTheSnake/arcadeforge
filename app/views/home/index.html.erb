<div id="container-fluid">
    <div id="container">
        <a id="logo" href="index.html"></a>
        <button  id="btn-create" class="btn btn-lg btn-success" type="button"><a href="../index.html">Create Game</a></button>

        <div id="lists">
            <div id="list-top">
                <h1>Top 10 games</h1>
                <ul>
                    <% @popular_games.each_with_index do |game, i| %>
                        <% present game do |game_presenter| %>
                            <li><%= link_to "#{i+1}. #{game_presenter.name} - #{game_presenter.votes}", game %></li>
                        <% end %>
                    <% end %>
                </ul>
            </div>

            <div id="list-recent">
                <h1>10 Recent games</h1>
                <ul>
                    <% @newest_games.each_with_index do |game, i| %>
                        <% present game do |game_presenter| %>
                            <li><%= link_to "#{i+1}. #{game_presenter.name} - #{game_presenter.age}", edit_game_path(game) %></li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <div id="environment">
        <div id="environment-base">
        </div>
    </div>
</div>
