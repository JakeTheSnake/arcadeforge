<!--<!DOCTYPE html>-->
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Arcadeforge</title>
    <!--<link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>-->
    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'edit_game', 'data-turbolinks-track' => true %>
  </head>
  <body>
      <div class="container">
        <header class="border-bottom">
          <hgroup class="logo">
            <%= link_to image_tag("generic/header_logo.png"), root_path, :class => "" %>
          </hgroup>
          <nav>
              <%= link_to "Home", root_path %>
              <%= link_to "Create", profile_mygames_path %>
              <%= link_to "Play", games_path %>
            </ul>
          </nav>

          <hgroup class="user">
            <% account_nav.each do |nav_item| %>
              <%= nav_item %>
            <% end %>
          </hgroup>
        </header>

        <!-- Main content -->
        <main>
          <%= yield %>
        </main>

        <footer class="border-top">
          <fgroup>
            <a class="disabled">About</a>
            <a class="disabled">Terms</a>
            <a class="disabled">Privacy</a>
          </fgroup>

          <fgroup>
            <%= link_to "Login", new_user_session_path %>
            <%= link_to "Sign up", new_user_registration_path %>
            <a class="disabled">Forgot password</a>
          </fgroup>

          <fgroup>
            <a class="disabled">Features</a>
            <a class="disabled">Tutorials</a>
            <a class="disabled">Blog</a>
          </fgroup>

          <fgroup class="social">
            <a href="http://www.facebook.com/arcadeforge.io"><%= image_tag "application/icon_social_facebook.png" %></a>
            <a href="https://twitter.com/arcadeforge"><%= image_tag "application/icon_social_twitter.png" %></a>
            <a href="https://www.youtube.com/channel/UCMlg5Dx_e1P0amYGkJeYHbg"><%= image_tag "application/icon_social_youtube.png" %></a>
          </fgroup>
          <br />
          <span>Copyright Â© 2014 ArcadeForge</span>
        </footer>
      </div>
  </body>
</html>